    <bean id="helloRouteBuilder" class="com.sodasmile.jbossfuse.hellofuse.HelloRouteBuilder"/>

    <camelContext id="camel" xmlns="http://camel.apache.org/schema/blueprint">
        <routeBuilder ref="helloRouteBuilder"/>
